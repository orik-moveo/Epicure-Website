{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurant"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "chef": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chef.chef",
      "inversedBy": "restaurants"
    },
    "dishes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::dish.dish",
      "mappedBy": "restaurant"
    },
    "openingHours": {
      "type": "component",
      "component": "restaurant.opening-hours",
      "repeatable": true
    },
    "location": {
      "type": "component",
      "component": "restaurant.location",
      "repeatable": false
    },
    "minPrice": {
      "type": "decimal"
    },
    "maxPrice": {
      "type": "decimal"
    }
  }
}
